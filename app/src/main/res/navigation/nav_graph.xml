<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph.xml"
    app:startDestination="@id/searchFragment">

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.jaiberyepes.mercadolibre.presentation.search.SearchFragment"
        android:label="search_fragment"
        tools:layout="@layout/search_fragment" />

    <fragment
        android:id="@+id/charactersFragment"
        android:name="com.jaiberyepes.mercadolibre.presentation.CharactersFragment"
        android:label="characters_fragment"
        tools:layout="@layout/fragment_characters">

        <action
            android:id="@+id/action_charactersFragment_to_characterDetailsFragment"
            app:destination="@id/characterDetailsFragment"
            app:enterAnim="@anim/slide_in_from_right"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/slide_in_from_left"
            app:popExitAnim="@anim/fade_out"/>
    </fragment>

    <fragment
        android:id="@+id/characterDetailsFragment"
        android:name="com.jaiberyepes.mercadolibre.presentation.CharacterDetailsFragment"
        android:label="fragment_character_details"
        tools:layout="@layout/fragment_character_details">

        <action
            android:id="@+id/action_characterDetailsFragment_to_charactersFragment"
            app:destination="@id/charactersFragment"
            app:enterAnim="@anim/slide_in_from_left"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/slide_in_from_right"
            app:popExitAnim="@anim/fade_out"/>

        <argument
            android:name="character"
            app:argType="integer" />

    </fragment>


</navigation>